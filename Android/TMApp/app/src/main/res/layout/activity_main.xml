<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewBeaconCount"
        android:text="0 visible beacons:"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <ListView
        android:id="@+id/listViewBeaconList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">
        <Button
            android:id="@+id/buttonRanging"
            android:onClick="rangingButtonTapped"
            android:text="Disable Ranging"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
        </Button>
        <Button
            android:id="@+id/buttonMonitoring"
            android:text="Disable Monitoring"
            android:onClick="monitoringButtonTapped"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
        </Button>
    </LinearLayout>
</LinearLayout>